<launch>

  <arg name="namespace" default="excavator" />
  <include file="$(find construction_vehicles)/excavator/launch/excavator_sim.launch">
    <arg name="namespace" value="$(arg namespace)" />
  </include>

  <group ns="$(arg namespace)">
    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />

    <include file="$(find construction_vehicles)/excavator/launch/excavator_control.launch" />
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find construction_vehicles)/excavator/rviz_config/rviz_config.rviz" />
  </group>

</launch>